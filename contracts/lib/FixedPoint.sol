/// @title  FixedPoint
/// @author Energi Core

pragma solidity 0.8.22;

contract FixedPoint {
    function getPercentageOf(uint256 x, uint256 y) public pure returns (uint256 z) {
        /// @solidity memory-safe-assembly
        assembly {
            z := mul(x, y)
            // Equivalent to `require((x == 0 || z / x == y) && !(x == -1 && y == type(int256).min))`.
            if iszero(gt(or(iszero(x), eq(sdiv(z, x), y)), lt(not(x), eq(y, shl(255, 1))))) {
                mstore(0x00, 0xedcd4dd4) // Failed
                revert(0x1c, 0x04)
            }
            z := sdiv(z, 100)
        }
    }
}
